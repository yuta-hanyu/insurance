<% if @comment.save %>
  $("#u_comments").html("<%= j(render partial: 'comments/u_comment') %>");
  $("textarea").val('');
  $("#comment_msg").html('<div class="alert alert-success"><%= @msg %></div>');
  $("#new_msg").html('');
<% else %>
  $("#new_msg").html('<div style="color:red; margin-bottom:10px;"><%= @msgs %></div>');
<% end %>