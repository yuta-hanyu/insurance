<div class="login_modal_wrapper" id='login_modal'>
  <div class="row justify-content-center">
    <div class="login_modal col-md-4 pr-10 pl-10">
      <!--閉じる-->
      <div class="close-modal">
        <i class="fas fa-times-circle fa-2x"></i>
      </div>
      <!--入力フォーム-->
      <h1>ユーザーログイン</h1>
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <!--失敗時のフラッシュmsg-->
        <div id="errors_login"></div>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control',placeholder: "メール"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control',placeholder: "パスワード" %>
        </div>
        <div class="main_btn">
          <%= f.submit 'ユーザーログイン', class: 'next_btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>