<div class="login_modal_wrapper" id='new_modal'>
  <div class="row justify-content-center">
    <div class="login_modal col-8">
      
      <!--閉じる-->
      <div class="close-modal">
        <i class="fas fa-times-circle fa-2x"></i>
      </div>
      <h1>新規登録</h1>
      <!--入力フォーム-->
      <div class="row offset-2 col-8">
        <%= form_with(model: @user ) do |f| %>
          <div id="errors_new"></div>
          <div class="form-group">
            <%= f.text_field :contractor_name, class: 'form-control new_text1',placeholder: "契約者氏名" %>
          </div>
          <div class="form-group ">
            <%= f.email_field :email, class: 'form-control new_text2',placeholder: "メール" %>
          </div>
          <!--住所検索API-->
          <div class="row">
            <div class="form-group input-group col-sm-4">
              <div class="input-group-prepend">
                <span class="input-group-text">〒</span>
              </div>
                <input id="zip-code" type="number" class="form-control" placeholder="住所自動検索">
            </div>
            <div class="form-group col-sm-8">
              <%= f.text_field :address, class: 'form-control place',placeholder: "住所" %>
            </div>
          </div>     
          <div class="form-group">
            <%= f.password_field :password, class: 'form-control',placeholder: "パスワード" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: 'form-control',placeholder: "パスワード再確認" %>
          </div>
          <div class="main_btn">
            <%= link_to '戻る',root_path ,class: "return_btn" %>
            <%= f.submit '登録', class: 'next_btn', data: { confirm: "登録しますか？" } %>
          </div>
        <% end %>
      </div>
      
    </div>
  </div>
</div>