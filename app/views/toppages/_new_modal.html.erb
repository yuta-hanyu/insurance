<div class="login_modal_wrapper" id='new_modal'>
  <div class="row justify-content-center">
    <div class="login_modal col-md-6" style="height: 70% !important;">
      
      <!--閉じる-->
      <div class="close-modal">
        <i class="fas fa-times-circle fa-2x"></i>
      </div>
      <h1>新規登録</h1>
      <!--入力フォーム-->
      <%= form_with(model: @user ) do |f| %>
      <div style="padding: 0 5%;">
        <!--バリデーションエラー-->
        <div id="errors_new">
        </div>
        <div class="form-group text-left">
          <%= f.label :contractor_name %>
          <%= f.text_field :contractor_name, class: 'form-control new_text1'%>
        </div>
        <div class="form-group text-left">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control new_text2' %>
        </div>
        <!--住所検索API-->
        <div class="form-group text-left">
          <%= f.label :address%>
          <h6 style="color:red; font-size:13px;">※住所検索は半角数字、ハイフンなしでご入力ください。</h6>
          <div class="row">
            <div class="form-group input-group col-sm-4">
              <div class="input-group-prepend">
                <span class="input-group-text">〒</span>
              </div>
                <input id="zip-code" type="number" class="form-control" placeholder="住所検索">
            </div>
            <div class="form-group col-sm-8">
              <%= f.text_field :address, class: 'form-control place'%>
            </div>
          </div>     
        </div>
        <div class="form-group text-left">
          <%= f.label :"パスワード" %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group text-left">
          <%= f.label :"パスワード再確認" %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="main_btn">
          <%= f.submit '登録', class: 'next_btn', data: { confirm: "登録しますか？" } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>