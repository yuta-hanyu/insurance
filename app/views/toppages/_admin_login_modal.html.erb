<div class="login_modal_wrapper" id='admin_login_modal'>
  <div class="row justify-content-center">
    <div class="login_modal col-md-4 pr-10 pl-10">
      <!--閉じる-->
      <div class="close-modal">
        <i class="fas fa-times-circle fa-2x"></i>
      </div>
      <!--入力フォーム-->
      <h1>管理者ログイン</h1>
      <p style="color: red" >ポートフォリオ用として入力値を初期表示しています。</p>
      <%= form_with(url: login_path, scope: :session) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class: 'form-control',value: "admin@admin.com"%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: 'form-control',value: "a" %>
        </div>
        <div class="main_btn">
          <%= f.submit 'ログイン', class: 'next_btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>