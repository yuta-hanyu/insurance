
<div class="main col-xs-12 col-md-8 offset-md-2">
  <%= form_with(model: @post, data: { confirm: "削除しますか？" }) do |f| %>
  <%# @post.errors.messages.delete(:post_img) %>
    <!--バリデーションエラー-->
    <div id="errors_new"></div>
    <div class="form-group">
      <%= f.label :title, '-タイトル-' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, '-投稿内容-' %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :post_img, '-画像-' %>
      <%= f.file_field :post_img, id: "myfile" %>
      <img v-show id="pImg" />
    </div>
    <div class="main_btn">
      <%= f.submit '新規投稿', class: 'next_btn' %>
    </div>     
  <% end %>
</div>
